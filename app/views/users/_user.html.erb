 <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <table class="table table-user">
    <tbody>
      <tr>
        <th>Name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
      </tr>
     </tbody>
  </table>
    <div class="row">
      <%= link_to edit_user_path(user), class:"btn btn-block btn-outline-secondary btn-sm mt-4" do %>
      <i class="fas fa-user-cog"></i>
       <% end %>
    </div>
